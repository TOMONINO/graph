<p id="notice"><%= notice %></p>

<h1>Records</h1>

<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Bmi</th>
      <th>Targetbmi</th>
      <th>Targetweight</th>
      <th>Compareweight</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @records.each do |record| %>
      <tr>
        <td><%= record.day %></td>
        <td><%= record.height %></td>
        <td><%= record.weight %></td>
        <td><%= record.BMI %></td>
        <td><%= record.targetBMI %></td>
        <td><%= record.targetweight %></td>
        <td><%= record.compareweight %></td>
        <td><%= link_to 'Show', record %></td>
        <td><%= link_to 'Edit', edit_record_path(record) %></td>
        <td><%= link_to 'Destroy', record, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <canvas id="myChart" width="400" height="50"></canvas>
    <script>draw_graph();</script>
  </tbody>
</table>

<br>

